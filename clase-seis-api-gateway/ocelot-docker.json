{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/Login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "api-autenticacion",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/gateway/Login",
      "UpstreamHttpMethod": [ "Post" ]
    },
    {
      "DownstreamPathTemplate": "/api/Categorias",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "api-categoria",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/gateway/Categorias",
      "UpstreamHttpMethod": [ "Get", "Post" ]
    },
    {
      "DownstreamPathTemplate": "/api/Categorias/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "api-categoria",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/gateway/Categorias/{id}",
      "UpstreamHttpMethod": [ "Get", "Put", "Delete" ]
    },
    {
      "DownstreamPathTemplate": "/api/Catalogos",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "api-catalogo",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/gateway/Catalogos",
      "UpstreamHttpMethod": [ "Get" ]
    },
    {
      "DownstreamPathTemplate": "/api/Catalogos/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "api-catalogo",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/gateway/Catalogos/{id}",
      "UpstreamHttpMethod": [ "Get" ]
    },
    {
      "DownstreamPathTemplate": "/api/Reportes/{tipoReporte}/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "api-reporte",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/gateway/Reportes/{tipoReporte}/{id}",
      "UpstreamHttpMethod": [ "Get" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7103"
  }
}
